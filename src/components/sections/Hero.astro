---
// Puedes definir props para personalizar la sección Hero si lo necesitas
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Hola, soy Alex Montalvo", 
  subtitle = "Desarrollador Web" 
} = Astro.props;
---

<section class="hero" id="inicio">
  <div class="container">
    <div class="hero-content">
      <h1>{title}</h1>
      <p class="subtitle">{subtitle}</p>
      <p class="description">
        Especializado en crear soluciones digitales modernas y atractivas.
        Transformo ideas en código limpio y eficiente.
      </p>
      <div class="cta-buttons">
        <!-- <a href="#proyectos" class="btn btn-primary">Proyectos</a> -->
        <a href="mailto:alekzzmr@gmail.com" class="btn btn-primary">Contáctame</a>
      </div>
    </div>
    <div class="hero-image">
      <div class="placeholder-image">

      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 8rem 0 5rem;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .hero-content {
    flex: 1;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(to right, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 600px;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .btn-secondary {
    background-color: var(--color-background-alt);
    color: var(--color-text);
    border: 1px solid var(--color-text-light);
  }

  .btn-secondary:hover {
    background-color: var(--color-text-light);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .placeholder-image {
    width: 400px;
    height: 400px;
    background-color: var(--color-background-alt);
    border-radius: 1rem;
    position: relative;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
    }

    .description {
      margin-left: auto;
      margin-right: auto;
    }

    .cta-buttons {
      justify-content: center;
    }

    .hero-image {
      margin-top: 2rem;
    }

    .placeholder-image {
      width: 300px;
      height: 300px;
    }
  }
</style>